%{
	#include <stdio.h>
%}

%x	ARTISTA OBRA EVENT

%%

<*>{
	"artista:" 					{BEGIN ARTISTA;}
	"obra:"						{BEGIN OBRA;}
	"evento:"					{BEGIN EVENT;}
	.|\n 						{;}
}

<ARTISTA>{
	"nome:".*					{yylval.nomeA = strdup(yytext+5); return NOME;}
	"idade:".*					{yylval.idade = atoi(strdup(yytext+6)); return IDADE;}
	"cidade:".*					{yylval.cidade = strdup(yytext+7); return CIDADE;}
	"colaborou:".*				{yylval.colab = strdup(yytext+10); return COLABOROU;}
	"obra:"						{BEGIN OBRA;}
	"evento:"					{BEGIN EVENT;}
	.\n 						{;}
}

<OBRA> {
	"nome:".*					{yylval.nomeO = strdup(yytext+5); return CANCAO;}
	"tipo:".*					{yylval.tipoO = strdup(yytext+5); return TIPO;}
	"tempo:".*					{yylval.tempo = atof(strdup(yytext+6)); return TEMPO;}
	"artista:"					{BEGIN ARTISTA;}
	"obra:"						{;}
	"evento:"					{BEGIN EVENT;}
	.|\n 						{;}
}

<EVENT>{
	"nome:".*					{yylval.nomeE = strdup(yytext+5); return EVENTO;}
	"tipo:".*					{yylval.tipoE = strdup(yytext+5); return TYPE;}
	"data:".*					{yylval.DATA = strdup(yytext+5); return DATA;}
	"artista:"					{BEGIN ARTISTA;}
	"obra:"						{BEGIN OBRA;}
	"evento:"					{;}
	.|\n 						{;}
}

%%
